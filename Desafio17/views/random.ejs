<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Num Aleatorio</title>
</head>

<body>
    <h1>Numero random entre 0 y 500</h1>
    <div id="random">

    </div>
    <p id="mensaje">

    </p>
    <br>
    <button id="boton">Generar Numero</button>


    <script>
        let boton = document.getElementById("boton");
        let numero = document.getElementById("random");
        let mensaje = document.getElementById("mensaje");
        let aleatorio = Math.floor((Math.random() * 500));

        boton.addEventListener("click", () => {
            numero.innerHTML = aleatorio;
        
            mensaje.innerHTML = "El numero aleatorio va a desaparecer en 5seg";
            setTimeout(() => {
                location.reload();
            }, 5000)
        }); 
    </script>
</body>

</html>