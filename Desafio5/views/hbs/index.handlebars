<head>
   <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<div style="text-align: center;">
    <h2 style="color: blue;">Historial de Productos</h2>
    {{#if algo}}
        <table class="table table-bordered border-primary table-sm">
            <thead>
              <tr class="table-dark">
                <th scope="col">Titulo</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
              </tr>
            </thead>
            <tbody>
                    <tr class="table-info">
                        <th style="font-size: 25px; padding-top: 3%;">{{title}}</th>
                        <th style="font-size: 25px; padding-top: 3%;">$ {{price}}</th>
                        <th><img src={{urlImg}}></th>
                    </tr>
            </tbody>
          </table>
    {{else}}
        <p class="alert alert-danger">No se agrego ningun producto</p>
    {{/if}} 
</div>
